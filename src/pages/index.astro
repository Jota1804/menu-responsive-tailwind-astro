---
import Layout from '../layouts/Layout.astro';

function openMenu(){
	let menu = document.getElementById("menu");

	if(menu.classList.contains("hidden")){
		menu.classList.remove("hidden");
	}
	else{
		menu.classList.add("hidden")
	}
}
---

<Layout title="Welcome to Astro.">
	<nav class="relative py-6 bg-gray-500">
      <div class="container flex px-8 mx-auto xl:px-0">
        <div class="flex flex-grow">
          <i class="fa-brands fa-slack"></i>
        </div>

        <div class="flex lg:hidden">
          <i class="fa-solid fa-bars" onclick="openMenu();"></i>
        </div>

        <div id="menu" class="lg:flex hidden justify-between flex-grow absolute lg:relative top-20 lg:top-0 bg-gray-800">
          <div>
            <a href="#" class="text-white lg:mr-7">Inicio</a>
